{
  "name": "beauty-marketplace-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Monorepo for the 524 beauty services marketplace platform.",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" run build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "pnpm --filter \"./packages/*\" run typecheck",
    "test": "pnpm --filter \"./packages/*\" run test",
    "dev": "concurrently \"pnpm --filter @524/api dev\" \"pnpm --filter @524/web dev\" \"pnpm --filter @524/mobile start\" --names \"API,WEB,MOBILE\" --prefix-colors \"blue,green,yellow\"",
    "dev:api": "./scripts/dev-api.sh",
    "dev:api:direct": "pnpm --filter @524/api dev",
    "dev:web": "pnpm --filter @524/web dev",
    "dev:mobile": "pnpm --filter @524/mobile start",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^1.7.13",
    "concurrently": "^8.2.2",
    "typescript": "^5.4.5"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}
