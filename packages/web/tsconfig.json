{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@524/shared": ["../shared/dist/index.js"],
      "@524/shared/*": ["../shared/dist/*.js"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "src/**/*", "next.config.mjs", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
