{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "..",
    "noEmit": true,
    "baseUrl": "../..",
    "paths": {
      "@524/shared": ["packages/shared/src/index.ts"],
      "@524/shared/bookings": ["packages/shared/src/bookings.ts"],
      "@524/shared/*": ["packages/shared/src/*.ts"],
      "@524/database": ["packages/database/src/index.ts"],
      "@524/database/*": ["packages/database/src/*.ts"],
      "@524/notifications": ["packages/notifications/src/index.ts"],
      "@524/notifications/*": ["packages/notifications/src/*.ts"]
    }
  },
  "include": ["src", "api"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
