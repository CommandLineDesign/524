{
  "name": "@524/api",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/index.ts",
    "build": "tsc --project tsconfig.json && npm run copy-vercel-handler",
    "copy-vercel-handler": "mkdir -p api && cp src/vercel-handler.js api/index.js",
    "vercel-build": "cd ../.. && npm run build --workspace @524/shared && npm run build --workspace @524/database && npm run build --workspace @524/notifications && npm run build --workspace @524/api",
    "start": "node dist/index.js",
    "lint": "echo \"(api) lint not configured yet\"",
    "test": "echo \"(api) tests not implemented yet\""
  },
  "dependencies": {
    "@524/database": "file:../database",
    "@524/notifications": "file:../notifications",
    "@524/shared": "file:../shared",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.1.0",
    "rate-limit-redis": "^4.0.0",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@vercel/node": "^3.0.0",
    "esbuild": "^0.24.2",
    "pino-pretty": "^11.1.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
