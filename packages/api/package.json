{
  "name": "@524/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' tsx watch src/index.ts",
    "build": "pnpm --filter @524/shared build && pnpm --filter @524/database build && pnpm --filter @524/notifications build && tsc --project tsconfig.json",
    "build:vercel": "node scripts/build-vercel.mjs",
    "vercel-build": "cd ../.. && pnpm --filter @524/shared build && pnpm --filter @524/database build && pnpm --filter @524/notifications build && pnpm --filter @524/api build && pnpm --filter @524/api build:vercel",
    "start": "node dist/index.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --project tsconfig.typecheck.json",
    "test": "tsx --test src/utils/roleHelpers.test.ts"
  },
  "dependencies": {
    "@524/database": "file:../database",
    "@524/notifications": "file:../notifications",
    "@524/shared": "file:../shared",
    "@opentelemetry/api": "^1.9.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "pino": "^9.1.0",
    "rate-limit-redis": "^4.0.0",
    "socket.io": "^4.7.5",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "esbuild": "^0.24.2",
    "pino-pretty": "^11.1.0",
    "tsx": "^4.7.2"
  }
}
