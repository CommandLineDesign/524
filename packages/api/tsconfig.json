{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@524/shared": ["../shared/dist/index.js"],
      "@524/shared/*": ["../shared/dist/*.js"],
      "@524/database": ["../database/dist/index.js"],
      "@524/database/*": ["../database/dist/*.js"],
      "@524/notifications": ["../notifications/dist/index.js"],
      "@524/notifications/*": ["../notifications/dist/*.js"]
    },
    "allowImportingTsExtensions": false,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["dist", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"]
}
